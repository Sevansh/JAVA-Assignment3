<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns:fx="http://javafx.com/fxml" fx:controller="com.myapp.TemperatureController">
    <Label text="Temperature Converter" />
    <HBox spacing="10">
        <TextField fx:id="inputField" promptText="Enter Celsius" />
        <Button text="Convert" onAction="#handleConvertButton" />
    </HBox>
    <Label fx:id="resultLabel" />
</VBox>
